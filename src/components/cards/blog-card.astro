---
import { type CollectionEntry } from "astro:content";
import FormattedDate from "@/components/formatted-date.astro";

type Props = CollectionEntry<"blog">;

const { data, slug } = Astro.props;
---

<article class="group">
  <a href={`/blog/${slug}`}>
    <img
      src={data.image}
      alt={data.title}
      class="w-full h-48 object-cover rounded-lg mb-4 transition-transform group-hover:scale-105"
    />
    <h2 class="text-xl font-semibold mb-2 group-hover:text-blue-600 transition-colors">
      {data.title}
    </h2>
  </a>
  <p class="text-gray-600 mb-2">{data.description}</p>
  <FormattedDate date={data.pubDate} />
</article>
