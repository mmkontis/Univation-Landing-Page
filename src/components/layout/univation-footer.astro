<style>
  .footer {
    background: linear-gradient(to bottom, 
      rgba(255,255,255,0) 0%,
      rgba(0,123,255,0.1) 25%,
      rgba(0,123,255,0.2) 50%,
      rgba(0,123,255,0.1) 75%,
      rgba(255,255,255,0) 100%
    );
    padding: 40px 0;
    color: white;
  }

  .footer__content {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer__grid {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  .footer__brand {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80px;
    transition: transform 0.6s ease;
  }

  .footer__brand:hover {
    transform: scale(0.95);
  }

  .footer__logo {
    padding: 25px 0;
    height: 100%;
    width: auto;
  }

  .footer__nav ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__nav a {
    color: inherit;
    font-size: 18px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s;
    padding: 0 20px;
  }

  .footer__nav a:hover {
    opacity: 0.8;
  }

  .footer__social {
    display: flex;
    gap: 15px;
  }

  .footer__social a {
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 35px;
    height: 35px;
    transition: transform 0.3s, background-color 0.3s;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.03);
  }

  .footer__social a:hover {
    transform: scale(0.9);
    background-color: rgba(255, 255, 255, 0.4);
  }

  .footer__social svg {
    width: 22px;
    height: 22px;
  }

  .footer__copyright {
    text-align: center;
    margin-top: 30px;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .footer--dark {
    color: black;
  }

  .footer--dark .footer__nav a {
    color: var(--elements-webflow-library--neutral--900);
  }

  .footer--dark .footer__social a {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .footer--dark .footer__social a:hover {
    background-color: rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .footer__grid {
      gap: 20px;
    }

    .footer__nav ul {
      flex-direction: column;
    }

    .footer__nav a {
      font-size: 16px;
    }
  }
</style>