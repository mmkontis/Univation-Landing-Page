  <div class="univation-footer-content">
    <div class="footer-grid">
      <a href="/" class="footer-logo-link">
        <img src="/images/logos/univation-white-logo.svg" alt="Univation logo" class="footer-logo">
      </a>
      <nav class="footer-nav">
        <ul class="footer-nav-list">
          <li><a href="/universities" class="footer-link">Universities</a></li>
          <li><a href="/companies" class="footer-link">Companies</a></li>
          <li><a href="/governments" class="footer-link">Governments</a></li>
          <li><a href="/jobs" class="footer-link">Jobs</a></li>
          <li><a href="/blog" class="footer-link">Blog</a></li>
          <li><a href="/contact" class="footer-link">Contact</a></li>
        </ul>
      </nav>
      <div class="footer-social">
        <a href="https://facebook.com/" target="_blank" class="social-icon-link">
