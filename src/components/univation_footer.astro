<style>
  .univation-footer-wrapper {
    background: linear-gradient(to bottom, 
      rgba(255,255,255,0) 0%,
      rgba(0,123,255,0.1) 25%,
      rgba(0,123,255,0.2) 50%,
      rgba(0,123,255,0.1) 75%,
      rgba(255,255,255,0) 100%
    );
    padding: 40px 0;
  }

  .brex-footer-icons {
    width: 24px;
    height: 24px;
  }

  .text-footer.frosted {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    padding: 10px;
    border-radius: 5px;
  }

  .black-content {
    color: black;
  }

  .black-content .brix---footer-link,
  .black-content .text-footer.frosted {
    color: black;
  }

  .black-content .brex-footer-icons {
    fill: black;
  }

  .black-content .brex-footer-icons[stroke] {
    stroke: black;
    fill: none;
  }
</style>