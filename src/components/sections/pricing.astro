---
import PricingPlan from "./pricing-plan.astro";

const plans = [
  {
    name: "Basic",
    price: "$9/month",
    features: [
      { name: "Feature 1", included: true },
      { name: "Feature 2", included: true },
      { name: "Feature 3", included: false },
    ],
    ctaText: "Get Started",
    ctaLink: "/signup?plan=basic"
  },
  {
    name: "Pro",
    price: "$19/month",
    features: [
      { name: "Feature 1", included: true },
      { name: "Feature 2", included: true },
      { name: "Feature 3", included: true },
    ],
    ctaText: "Go Pro",
    ctaLink: "/signup?plan=pro"
  },
  // Add more plans as needed
];
---

<section class="pricing-section py-16">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">Our Pricing Plans</h2>
    <PricingPlan plans={plans} />
  </div>
</section>

<style>
  .pricing-section {
    background-color: #f8fafc;
  }
</style>