---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  titleClass?: string;
  labelClass?: string;
  subtitleClass?: string;
}

const { label, title, subtitle, titleClass = "", labelClass = "", subtitleClass = "" } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  {label && <p class={`text-sm font-semibold uppercase tracking-wide text-primary ${labelClass}`}>{label}</p>}
  <h2 class={`mt-2 text-3xl font-bold tracking-tight sm:text-4xl ${titleClass}`}>{title}</h2>
  {subtitle && <p class={`mt-3 text-xl text-muted-foreground ${subtitleClass}`}>{subtitle}</p>}
</div>
